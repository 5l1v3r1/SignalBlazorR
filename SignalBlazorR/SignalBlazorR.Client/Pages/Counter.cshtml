@page "/counter/{ams}"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button onclick="@IncrementCount">Click me</button>

<Chat />

@functions {
    int currentCount = 0;

    int amt = 1;
    public string ams { get; set; } = string.Empty;

    protected override void OnInit()
    {

        if(!int.TryParse(ams, out amt))
        {
            amt = 1;
        }
    }

    void IncrementCount()
    {
        currentCount += amt;
    }
}
